print("Hello, this is a basic calculator.")

def multiplication(): 
    result = num1 * num2 
    print(result)
def division(): 
    result = num1 // num2
    print(result)
def subtraction(): 
    result = num1 - num2
    print(result)
def addition(): 
    result = num1 + num2
    print(result)


run = True 
while run == True: 
  user_input = input("which operand are you using? ")
  if user_input == "exit": 
    break
  num1 = int(input("num1: ")) 
  num2 = int(input("num2: ")) 
  if user_input == "mult": 
    multiplication()
    
  if user_input == "div":  
    division()
    
  if user_input == "subt":  
    subtraction()
  if user_input == "add": 
    addition()
  
    
