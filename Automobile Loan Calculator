payoff = 1/36 

automobileLoanBalance = input("enter an automobile loan balance: ")

automobileLoanBalance = int(automobileLoanBalance)


month1 = automobileLoanBalance * payoff
print("month 1 you are paying: ")
print(month1)

newBalance = automobileLoanBalance - month1 
print("amount remaining to pay off: ")
print(newBalance)

month2 = automobileLoanBalance * payoff
print("month 2 you are paying: ")
print(month2)

newerBalance = automobileLoanBalance - (month1 + month2)
print("amount remaining to pay off: ")
print(newerBalance)
